<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adil.taskmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:name="com.example.adil.taskmanager.TaskManagerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.adil.taskmanager.SecurityScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.adil.taskmanager.AddTaskActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.adil.taskmanager.viewTasksActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.adil.taskmanager.EditTasksActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.adil.taskmanager.TasksSelectActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.adil.taskmanager.viewPictureActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>